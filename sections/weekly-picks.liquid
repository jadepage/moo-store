{{ 'section-weekly-picks.css' | asset_url | stylesheet_tag }}

<div class="weekly-picks">
  <h2 class="weekly-picks_header">Picks of the week</h2>
  <div class="weekly-picks_product_container">
      {% for product in section.settings.collection.products %}
        <div class="weekly-picks_item">
          <a class="weekly-picks_item-link" href="{{ product.url }}">
            <div 
              class="product-bubble bubble--{% if product.tags contains "New" %}new{% elsif product.tags contains "Fave" %}fav{% elsif product.compare_at_price != blank %}sale{% endif %}">
              <span>
                {% if product.tags contains "New" %}
                  new
                {% elsif product.tags contains "Fave" %}
                  staff<br>fave
                {% elsif product.compare_at_price != blank %}
                  sale
                {% endif %}
              </span>
            </div>
            <div class="weekly-picks_image-wrapper">
              <img src="{{ product.images[0].src | img_url: 'medium' }}" alt="">
            </div>
            <p class="weekly-picks_product-title">{{ product.title }}</p>
            <div class="weekly-picks_price">
              <span>{{ product.price | money }}</span>
            </div>
          </a>
        </div>
      {% endfor %}
  </div>
</div>


{% schema %}
{
  "name": "Weekly Picks",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "collection"
    } 
  ],
  "presets": [
    {
      "name": "Weekly Picks"
    } 
  ]
}
{% endschema %}